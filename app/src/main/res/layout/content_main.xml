<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kkontagion.flipmenu.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/bigbt_top"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/fancaidan" />

        <Button
            android:id="@+id/bt_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/bigbt_sides"
            android:layout_marginStart="@dimen/bigbt_sides"
            android:text="@string/translate_menu"
            android:textSize="@dimen/bigbt_text_size" />

        <Button
            android:id="@+id/bt_how"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/bt_translate"
            android:layout_alignStart="@+id/bt_translate"
            android:layout_below="@+id/bt_translate"
            android:layout_marginEnd="@dimen/bigbt_sides"
            android:layout_marginStart="@dimen/bigbt_sides"
            android:layout_marginTop="8dp"
            android:text="@string/help"
            android:textSize="@dimen/bigbt_text_size" />
    </LinearLayout>

</RelativeLayout>
